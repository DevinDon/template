{
  "name": "@iinfinity/template",
  "version": "0.1.1",
  "description": "Template Command-Line Interface.",
  "main": "dist/index.js",
  "bin": {
    "template": "dist/index.js",
    "t": "dist/index.js"
  },
  "directories": {
    "doc": "docs",
    "example": "src/demo",
    "test": "src/test"
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "sh -c 'rm -rf dist out temp'",
    "debug": "node --inspect-brk -r ts-node/register src/main/index.ts",
    "demo": "cross-env MODE=DEV node -r ts-node/register src/demo/index.ts",
    "dev": "cross-env MODE=DEV node -r ts-node/register src/main/index.ts",
    "pack": "webpack --config webpack.prod.js && sed -i '1i\\#!/usr/bin/env node' bin/index.js && chmod +x bin/index.js",
    "prepublishOnly": "npm run clean && npm run build",
    "prod": "cross-env MODE=PROD node dist",
    "start": "node dist",
    "test": "node node_modules/jasmine/bin/jasmine.js --config=src/test/jasmine.json --reporter=jasmine-console-reporter --require=ts-node/register",
    "watch": "tsc -w"
  },
  "keywords": [
    "typescript",
    "template",
    "project",
    "create-app"
  ],
  "author": "DevinDon <I.INF@Outlook.com> (https://blog.don.red/)",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@iinfinity/logger": "^0.3.3",
    "commander": "^6.0.0",
    "shelljs": "^0.8.4",
    "simple-git": "^2.14.0"
  },
  "devDependencies": {
    "@types/jasmine": "3.5.11",
    "@types/node": "14.0.25",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "@typescript-eslint/parser": "3.7.0",
    "cross-env": "7.0.2",
    "eslint": "7.5.0",
    "jasmine": "3.5.0",
    "jasmine-console-reporter": "3.1.0",
    "ts-loader": "8.0.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.7",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevinDon/template.git"
  },
  "bugs": {
    "url": "https://github.com/DevinDon/template/issues"
  },
  "homepage": "https://github.com/DevinDon/template"
}
